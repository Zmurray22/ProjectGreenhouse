<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="listItem_icons"
        parent="@style/Widget.AppCompat.ListView">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">.8</item>
        <item name="android:scaleY">.8</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="settings_list"
        parent="@style/Widget.AppCompat.ListView">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="care">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="background">?android:attr/listDivider</item>
    </style>

    <style name="actionbar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

</resources>