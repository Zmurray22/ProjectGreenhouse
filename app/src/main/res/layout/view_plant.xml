<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="5dp"
    app:cardBackgroundColor="#BFFFFFFF"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_bg2" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_gravity="top"
        android:layout_marginStart="85dp"/>
    <TextView
        android:id="@+id/speciesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species-Name"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="24sp"
        android:layout_gravity="bottom"
        android:layout_marginStart="85dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end">
        <ImageView
            android:id="@+id/water_icon"
            style="@style/listItem_icons"
            app:srcCompat="@drawable/icon_water"/>

        <ImageView
            android:id="@+id/heart_icon"
            style="@style/listItem_icons"
            android:layout_toEndOf="@id/water_icon"
            app:srcCompat="@drawable/icon_heart" />

        <ImageView
            android:id="@+id/freeze_icon"
            style="@style/listItem_icons"
            android:layout_toEndOf="@id/heart_icon"
            app:srcCompat="@drawable/icon_freeze" />

        <ImageView
            android:id="@+id/storm_icon"
            style="@style/listItem_icons"
            android:layout_toEndOf="@id/freeze_icon"
            app:srcCompat="@drawable/icon_storm" />
        <ImageView
            android:id="@+id/toxic_icon2"
            style="@style/listItem_icons"
            android:layout_toEndOf="@id/storm_icon"
            app:srcCompat="@drawable/icon_toxic" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>