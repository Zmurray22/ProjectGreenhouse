<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout_inventory"
    android:background="@drawable/background_bg3"
    tools:context=".InventoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Intro text-->

        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="62dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp" />
<!--TODO: Convert to recyclerView and establish storage system for items-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="top"
                    card_view:cardBackgroundColor="#BFFFFFFF"
                    android:layout_marginHorizontal="5dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:scaleType="centerCrop"
                        card_view:srcCompat="@drawable/test_plant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nickname"
                        android:textSize="24sp"
                        android:layout_gravity="top"
                        android:layout_marginStart="85dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Species-Name"
                        android:textStyle="italic"
                        android:textSize="24sp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="85dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="end">
                        <ImageView
                            android:id="@+id/water_icon"
                            android:layout_width="35dp"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            card_view:srcCompat="@drawable/icon_water"/>

                        <ImageView
                            android:id="@+id/heart_icon"
                            android:layout_width="35dp"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_toRightOf="@id/water_icon"

                            card_view:srcCompat="@drawable/icon_heart" />

                        <ImageView
                            android:id="@+id/freeze_icon"
                            android:layout_width="35dp"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_toRightOf="@id/heart_icon"

                            card_view:srcCompat="@drawable/icon_freeze" />

                        <ImageView
                            android:id="@+id/storm_icon"
                            android:layout_width="35dp"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_toRightOf="@id/freeze_icon"

                            card_view:srcCompat="@drawable/icon_storm" />
                        <ImageView
                            android:id="@+id/toxic_icon"
                            android:layout_width="35dp"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_toRightOf="@id/storm_icon"

                            card_view:srcCompat="@drawable/icon_toxic" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <include
                    layout="@layout/commonlayout"
                    android:id="@+id/list_item1"
                    />

                <include
                    layout="@layout/commonlayout2"
                    android:id="@+id/list_item2"
                    />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Drawer navigation-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_navigationView"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>